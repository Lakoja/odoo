<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="weight_check_manual_view_form" model="ir.ui.view">
        <field name="name">weight.check.manual.form</field>
        <field name="model">weight.check.manual</field>
        <field name="arch" type="xml">
            <form>
                <field name="picking_id" invisible="1"/>
                <field name="manual_weight"/>

                <footer>
                    <button name="button_confirm" type="object" string="Enter" class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" special="cancel" data-hotkey="z" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
